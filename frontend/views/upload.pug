extends layout

block content
    include header
    include navbar

    div.w3-display-middle(style='margin-top: 75px;')
        div.w3-card-4.w3-padding-large.w3-light-grey(style='width: 100%; min-width: 600px;')
            h2.w3-center Upload File
            form.w3-container(action='/upload', method='POST', enctype='multipart/form-data')
                p
                    label(for='title') Title:
                    input.w3-input(type='text' id='title' name='title' required)
                p
                    label(for='author') Author (if not owned by user):
                    input.w3-input(type='text' id='author' name='author')
                p
                    label(for='publicResource') Public Resource:
                    select.w3-select(id='publicResource' name='publicResource')
                        option(value='yes') Yes
                        option(value='no') No
                p
                    label(for='type') Type:
                    select.w3-select(id='type' name='type')
                        option(value='relatório') Relatório
                        option(value='tese') Tese
                        option(value='artigo') Artigo
                        option(value='aplicação') Aplicação
                        option(value='slides') Slides
                        option(value='teste') Teste
                        option(value='exame') Exame
                        option(value='problema resolvido') Problema resolvido
                p
                    label(for='file') Select file:
                    input.w3-input(type='file' id='file' name='Myfile' required)
                p.w3-center
                    button.w3-button.w3-blue(type='submit') Upload


    script.
        // You can add some client-side validation or other JavaScript here.
    div(style="padding-top: 100px;")
    include footer
