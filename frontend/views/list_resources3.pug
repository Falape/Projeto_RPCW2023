extends layout

block content
  include header
  include navbar
  h1 Recursos disponíveis de #{user}:
  
  //- Filter Section
  .w3-container.w3-margin-bottom.w3-light-grey
    h2 Filter:
    form(method='POST' action='/resource/filter')
      .w3-row-padding
        .w3-half
          label Title:
          input.w3-input(type='text' name='title')
        .w3-half
          label Autor da submissão:
          input.w3-input(type='text' name='uploadedByUsername')
      .w3-row-padding
        .w3-half
          label Data de submissão:
          input.w3-input(type='date' name='dateCreated')
        .w3-half
          label Tipo de Recurso:
          input.w3-input(type='text' name='type')
      button.w3-button.w3-blue(type='submit') Apply Filter

  //- Table of resources
  table.w3-table.w3-bordered.w3-striped.w3-centered
    thead
      tr
        th Titulo 
        th Autor da submissão
        th Data de submissão
        th Tipo de Recurso
        th 
    tbody
      each resource in resources
        tr
          td= resource.title
          td= resource.uploadedByUsername
          td= resource.dateCreated
          td= resource.type
          td
            a.w3-button.w3-green(href=`/recurso/${resource._id}`) View Details
  include footer
